<% layout('layouts/boilerplate') -%>
<main class="container mt-5">
  <h1>Login</h1>
  <form action="/login" method="post" class="validated-form" novalidate>
    <div class="mb-3">
      <label class="form-label" for="username">Username</label>
      <input
        class="form-control"
        type="text"
        id="username"
        name="username"
        required
      />
      <div class="invalid-feedback">Username should not be empty</div>
    </div>
    <div class="mb-3">
      <label class="form-label" for="password">Password</label>
      <input
        class="form-control"
        type="password"
        id="password"
        name="password"
        required
      />
      <div class="invalid-feedback">Password should not be empty</div>
    </div>
    <button type="submit" class="btn btn-success">Login</button>
  </form>
</main>
